      "description": "Currency amount (lacs)",
      "category": "currency"
    },
    {
      "pattern": "\\d+\\s*crores?\\s*",
      "flags": ["IGNORECASE"],
      "description": "Currency amount (crores)",
      "category": "currency"
    },
    {
      "pattern": "Rs\\.?\\s*\\d+",
      "flags": ["IGNORECASE"],
      "description": "Rupee amount",
      "category": "currency"
    },
    {
      "pattern": "INR\\s*\\d+",
      "flags": ["IGNORECASE"],
      "description": "INR amount",
      "category": "currency"
    },
    {
      "pattern": "\\s+plaintiff\\s+",
      "flags": ["IGNORECASE"],
      "description": "Legal party reference",
      "category": "legal_language"
    },
    {
      "pattern": "\\s+defendant\\s+",
      "flags": ["IGNORECASE"],
      "description": "Legal party reference",
      "category": "legal_language"
    },
    {
      "pattern": "\\s+appellant\\s+",
      "flags": ["IGNORECASE"],
      "description": "Legal party reference",
      "category": "legal_language"
    },
    {
      "pattern": "\\s+complainant\\s+",
      "flags": ["IGNORECASE"],
      "description": "Legal party reference",
      "category": "legal_language"
    },
    {
      "pattern": "\\s+accused\\s+",
      "flags": ["IGNORECASE"],
      "description": "Legal party reference",
      "category": "legal_language"
    },
    {
      "pattern": "\\s+versus\\s+",
      "flags": ["IGNORECASE"],
      "description": "Case citation marker",
      "category": "legal_language"
    },
    {
      "pattern": "\\s+v\\.?s?\\.?\\s+",
      "flags": ["IGNORECASE"],
      "description": "Case citation marker (vs)",
      "category": "legal_language"
    }
  ]
}
